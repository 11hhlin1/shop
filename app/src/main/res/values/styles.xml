<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.NoTitle.Transparent" parent="@android:style/Theme.NoTitleBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="Theme.NoTitle.Transparent.Fullscreen" parent="Theme.NoTitle.Transparent">
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="Splash" parent="Theme.NoTitle.Transparent">
        <item name="android:windowDisablePreview">true</item>
    </style>
    <style name="PhotoViewer" parent="Theme.NoTitle.Transparent">
        <item name="android:windowAnimationStyle">@style/FadeAnimTheme</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/black</item>
    </style>
    <style name="Theme.NoTitle.Gray" parent="Theme.NoTitle.Transparent">
        <item name="android:windowBackground">@color/activity_bg_gray</item>
    </style>
    <style name="FadeAnimTheme" parent="@android:style/Animation.Translucent">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/popup_window_dismiss</item>
    </style>
    <style name="TopNavSub" parent="Theme.NoTitle.Transparent">
        <item name="android:windowAnimationStyle">@style/SubActivityAnimTheme</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <style name="SubActivityAnimTheme" parent="@android:style/Animation.Activity">
        <!--<item name="android:windowEnterAnimation">@anim/base_stay_orig</item>-->
        <!--<item name="android:windowExitAnimation">@anim/base_stay_orig</item>-->

        <item name="android:activityOpenEnterAnimation">@anim/right_side_in</item>
        <item name="android:activityOpenExitAnimation">@anim/base_stay_orig</item>
        <item name="android:activityCloseEnterAnimation">@anim/base_stay_orig</item>
        <item name="android:activityCloseExitAnimation">@anim/right_side_out</item>
        <item name="android:taskOpenEnterAnimation">@anim/right_side_in</item>
        <item name="android:taskOpenExitAnimation">@anim/base_stay_orig</item>
        <item name="android:taskCloseEnterAnimation">@anim/base_stay_orig</item>
        <item name="android:taskCloseExitAnimation">@anim/right_side_out</item>
        <item name="android:taskToFrontEnterAnimation">@anim/right_side_in</item>
        <item name="android:taskToFrontExitAnimation">@anim/base_stay_orig</item>
        <item name="android:taskToBackEnterAnimation">@anim/base_stay_orig</item>
        <item name="android:taskToBackExitAnimation">@anim/right_side_out</item>
        <!--<item name="fragmentOpenEnterAnimation">@anim/right_side_in</item>-->
        <!--<item name="fragmentOpenExitAnimation">@anim/base_stay_orig</item>-->
        <!--<item name="fragmentCloseEnterAnimation">@anim/base_stay_orig</item>-->
        <!--<item name="fragmentCloseExitAnimation">@anim/right_side_out</item>-->
        <!--<item name="fragmentFadeEnterAnimation">@null</item>-->
        <!--<item name="fragmentFadeExitAnimation">@null</item>-->
    </style>


    <!-- 首页 -->
    <style name="titlebar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:background">@color/color_EE394A</item>
    </style>
    <style name="title_textView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textSize">@dimen/textsize_18sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="main_RadioButton_style" parent="@style/main_Red_RadioButton_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="main_Red_RadioButton_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/textsize_10sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:paddingBottom">@dimen/tab_margin</item>
        <item name="android:paddingTop">@dimen/tab_margin</item>
        <item name="android:textColor">@color/main_text_color_selector</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="transparent_dialog" parent="@android:style/Theme.Dialog">
        <!--边框-->
        <item name="android:windowFrame">@null</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--无标题-->
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!-- 登录页面 -->
    <style name="login_edittext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/double_line_height_210px</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@mipmap/input_bg</item>
        <item name="android:drawablePadding">@dimen/margin_24px</item>
        <item name="android:textSize">@dimen/textsize_15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/color_999999</item>
    </style>

    <style name="login_btn">
        <item name="android:background">@mipmap/dl_bg</item>
        <item name="android:textSize">@dimen/textsize_16sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="vertical_line">
        <item name="android:layout_width">@dimen/line_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/line_color_gray</item>
    </style>

    <style name="horizontal_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_height</item>
        <item name="android:background">@color/line_color_gray</item>
    </style>

    <style name="top_horizontal_line" parent="@style/horizontal_line">
        <item name="android:layout_alignParentTop">true</item>
    </style>


    <style name="bottom_horizontal_line" parent="@style/horizontal_line">
        <item name="android:layout_alignParentBottom">true</item>
    </style>
    <style name="photo_grid_view">
        <item name="android:background">@color/white</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:horizontalSpacing">@dimen/margin_24px</item>
        <item name="android:listSelector">@android:color/transparent</item>
        <item name="android:numColumns">4</item>
        <item name="android:paddingTop">@dimen/margin_48px</item>
        <item name="android:paddingBottom">@dimen/margin_48px</item>
        <item name="android:stretchMode">columnWidth</item>
        <item name="android:verticalSpacing">@dimen/margin_24px</item>
        <item name="android:gravity">center</item>
    </style>


    <!-- 施工进度页面 -->
    <style name="RadioButton_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/personal_small_height</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/main_text_color_selector</item>
        <item name="android:textSize">@dimen/textsize_14sp</item>
        <item name="android:drawablePadding">@dimen/margin_24px</item>
    </style>

    <style name="white_bg_dialog" parent="@android:style/Theme.Dialog">
        <!--边框-->
        <item name="android:windowFrame">@null</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--无标题-->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@mipmap/progress_img_popbg</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="popwin_anim_style">
        <item name="android:windowEnterAnimation">@anim/popup_window_show</item>
        <item name="android:windowExitAnimation">@anim/popup_window_dismiss</item>
    </style>
    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/effect_bg_show</item>
        <item name="android:windowExitAnimation">@anim/popup_window_dismiss</item>
    </style>
    <style name="MyDialogStyleTop" >
        <item name="android:windowAnimationStyle">@style/AnimBottom</item>
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsTranslucent">true</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@android:color/transparent</item><!--背景透明-->
        <item name="android:backgroundDimEnabled">false</item><!--模糊-->
    </style>
</resources>
