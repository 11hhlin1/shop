<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/news_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_centerHorizontal="true"
        android:padding="3dp"
        android:textSize="@dimen/textsize_12sp"
        android:textColor="@color/color_999999"
        android:background="@color/color_e6e6e6"
        android:text="周三 9:00"/>

    <LinearLayout
        android:layout_below="@+id/news_time"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_marginTop="12.5dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:orientation="vertical"
        android:background="@drawable/register_et_bg">

        <TextView
            android:id="@+id/new_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_EE394A"
            android:textSize="@dimen/textsize_15sp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="17dp"
            android:text="订单状态"/>
        <TextView
            android:id="@+id/new_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_404040"
            android:textSize="@dimen/textsize_14sp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="12dp"
            android:text="大大啊飒飒方法"/>
    </LinearLayout>
</RelativeLayout>