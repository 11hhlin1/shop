<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/dialog_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/margin_60px"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/textsize_16sp" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_content"
        android:layout_marginTop="@dimen/margin_30px"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingBottom="50dp"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/single_line_height_132px"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/dialog_default_cancel_title"
            android:background="@color/secondary_gray"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="@dimen/single_line_height_132px"/>

        <TextView
            android:id="@+id/btn_confirm"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/single_line_height_132px"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/dialog_default_confirm_title"
            android:textColor="@color/white"
            android:background="@color/color_EE394A"
            android:textSize="@dimen/textsize_16sp" />

    </LinearLayout>

</RelativeLayout>