<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/textsize_14sp"
            android:text="@string/comment"/>

        <CheckBox
            android:id="@+id/sel_box_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/selector_star_check_box"
            android:button="@null"
            android:layout_marginLeft="10dp"/>
        <CheckBox
            android:id="@+id/sel_box_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/selector_star_check_box"
            android:button="@null"
            android:layout_marginLeft="3dp"/>
        <CheckBox
            android:id="@+id/sel_box_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/selector_star_check_box"
            android:button="@null"
            android:layout_marginLeft="3dp"/>
        <CheckBox
            android:id="@+id/sel_box_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/selector_star_check_box"
            android:button="@null"
            android:layout_marginLeft="3dp"/>
        <CheckBox
            android:id="@+id/sel_box_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/selector_star_check_box"
            android:button="@null"
            android:layout_marginLeft="3dp"/>

        <TextView
            android:id="@+id/score"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/textsize_14sp"
            android:text="1分" />
    </LinearLayout>
    <View style="@style/horizontal_line"
        android:paddingLeft="12dp"/>

    <EditText
        android:id="@+id/desc_tv"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@android:color/white"
        android:ems="10"
        android:gravity="start"
        android:hint="请输入您的评论"
        android:maxLength="200"
        android:minLines="4"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="@dimen/margin_30p"
        android:scrollbars="vertical"
        android:textColor="@color/black"
        android:textColorHint="@color/secondary_gray"
        android:textSize="@dimen/textsize_14sp" />

    <Button
        android:id="@+id/btn_comment"
        style="@style/login_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/single_line_height_132px"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginTop="@dimen/margin_30p"
        android:text="@string/sure"/>
</LinearLayout>