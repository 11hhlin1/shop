<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b0000000">
    <LinearLayout
        android:id="@+id/pop_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:padding="@dimen/margin_60px"
        android:orientation="vertical">

        <GridView
            android:id="@+id/share_gridview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="3"
            android:listSelector="@android:color/transparent"
            android:verticalSpacing="@dimen/margin_60px"
            android:stretchMode="columnWidth" />
        
        <TextView
            android:id="@+id/share_cancel_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/single_line_height_132px"
            android:text="@string/dialog_default_cancel_title"
            android:background="@mipmap/quxiao_bg"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize_18sp"
            android:gravity="center"
            android:layout_marginTop="@dimen/margin_60px"/>
    </LinearLayout>

</RelativeLayout>